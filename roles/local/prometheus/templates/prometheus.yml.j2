global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ["localhost:{{ prometheus_http_port }}"]

{% if prometheus_timestream_enabled | bool %}
remote_write:
  - url: "http://timestream-adapter:9201/write"

remote_read:
  - url: "http://timestream-adapter:9201/read"
{% endif %}
